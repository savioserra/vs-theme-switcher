{
  "name": "theme-switcher",
  "displayName": "Theme Switcher",
  "description": "Choose which themes should be activated which hour!",
  "version": "2.3.1",
  "publisher": "savioserra",
  "icon": "assets/icon128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/savioserra/vs-theme-switcher.git"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/themeswitcher.js",
  "contributes": {
    "commands": [
      {
        "command": "themeswitcher.openSettings",
        "title": "Theme Switcher: Open Settings"
      }
    ],
    "configuration": {
      "title": "Theme Switcher",
      "properties": {
        "themeswitcher.utcOffset": {
          "default": 0,
          "type": "integer",
          "description": "The utc offset used to scheduling tasks.",
          "examples": [
            -3,
            -4,
            0
          ]
        },
        "themeswitcher.mappings": {
          "default": [],
          "type": "array",
          "description": "Array of mapping defining when each theme should be activated",
          "examples": [
            [
              {
                "time": "14:40",
                "theme": "Material Theme"
              },
              {
                "time": "20:40",
                "theme": "Material Theme Darker"
              }
            ]
          ],
          "items": {
            "type": "object",
            "required": [
              "time"
            ],
            "properties": {
              "time": {
                "type": "string",
                "description": "When this theme should be activated.",
                "pattern": "^([0-9]|0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$"
              },
              "theme": {
                "description": "Theme to be activated",
                "type": "string"
              },
              "iconTheme": {
                "description": "Icon Theme to be activated (optional)",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "webpack": "webpack --mode development",
    "vscode:prepublish": "webpack --mode production",
    "webpack-dev": "webpack --mode development --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json,css,md}\""
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "postcss": "^8.4.41",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.3.3",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.10",
    "ts-loader": "^9.5.0",
    "tslint": "^6.1.3",
    "typescript": "^5.5.4",
    "vscode-test": "^1.6.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "rxjs": "^7.8.1"
  }
}
