{
  "name": "theme-switcher",
  "displayName": "Theme Switcher",
  "description": "Choose which themes should be activated which hour!",
  "version": "2.0.0",
  "publisher": "savioserra",
  "icon": "assets/icon128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/savioserra/vs-theme-switcher.git"
  },
  "engines": {
    "vscode": "^1.22.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/themeswitcher.js",
  "contributes": {
    "configuration": {
      "title": "Theme Switcher",
      "properties": {
        "themeswitcher.utcOffset": {
          "default": 0,
          "type": "integer",
          "description": "The utc offset used to scheduling tasks.",
          "examples": [
            -3,
            -4,
            0
          ]
        },
        "themeswitcher.mappings": {
          "default": [],
          "type": "array",
          "description": "Array of mapping defining when each theme should be activated",
          "examples": [
            [
              {
                "time": "14:40",
                "theme": "Material Theme"
              },
              {
                "time": "20:40",
                "theme": "Material Theme Darker"
              }
            ]
          ],
          "items": {
            "type": "object",
            "required": [
              "time",
              "theme"
            ],
            "properties": {
              "time": {
                "type": "string",
                "description": "When this theme should be activated.",
                "pattern": "^([0-9]|0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$"
              },
              "theme": {
                "description": "Theme to be activated",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js",
    "webpack": "webpack --mode development",
    "vscode:prepublish": "webpack --mode production",
    "webpack-dev": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/moment-timezone": "^0.5.30",
    "@types/node": "^22.5.0",
    "@types/vscode": "^1.91.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "tslint": "^6.1.3",
    "typescript": "^5.5.4",
    "vscode-test": "^1.6.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.30.1"
  }
}
