{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6",
      "dom"
    ],
    "types": ["node", "react", "react-dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
